# Domaine principal (ex: cedlab.ovh -> génère api.cedlab.ovh, ws.cedlab.ovh, app.cedlab.ovh ...)
DOMAIN=cedlab.ovh

# PostgreSQL
DATABASE_URL=postgresql://admin:password123@postgres:5432/oncocollab
REDIS_URL=redis://redis:6379

API_PORT=3000
API_URL=http://localhost:3000

#faire du tunneling avec ngrok si vous arrivez pas à relier via réseau les autres users
WEBSOCKET_PORT=4000
WEBSOCKET_URL=http://localhost:4000

# Frontend
VITE_API_URL=http://localhost:3000
VITE_WS_URL=http://localhost:4000
VITE_ROOM_ID=123

# Serveur TURN - metered.ca (prod) : fournir uniquement la clé API,
# les ICE servers sont récupérés dynamiquement au démarrage de l'appel
VITE_METERED_API_KEY=your_metered_api_key_here

# Serveur TURN local / coturn (dev uniquement, ignoré si VITE_METERED_API_KEY est défini)
VITE_STUN_URL=stun:stun.l.google.com:19302
VITE_TURN_URL=turn:server_ip_docker:3478
VITE_TURN_USERNAME=username
VITE_TURN_PASSWORD=password

# IP externe du serveur coturn (dev uniquement)
EXTERNAL_IP=127.0.0.1

# Generation de rapport (laisser vide pour auto-detection via hostname)
REPORT_API_URL=
GEMINI_API_KEY=

NODE_ENV=production
